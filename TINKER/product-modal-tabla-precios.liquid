<script>
  class TablaDescuentosModal {
    constructor() {
      this.openBtn = document.getElementById("btnTablaDescuentos");
      this.closeBtn = document.getElementById("closeModalDescuentos");
      this.overlay = document.getElementById("overlayTablaDescuentos");
      this.init();
    }

    init() {
      this.openBtn.addEventListener("click", () => this.open());
      this.closeBtn.addEventListener("click", () => this.close());
      
      // Cerrar haciendo clic en el overlay
      this.overlay.addEventListener("click", (e) => {
        if (e.target === this.overlay) {
          this.close();
        }
      });
      
      // Cerrar con tecla Escape
      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && this.overlay.classList.contains("active")) {
          this.close();
        }
      });
    }

    open() {
      // Hacemos que el elemento sea parte del layout pero aún invisible
      this.overlay.style.display = "flex";

      // Forzamos un pequeño delay para que el navegador procese el cambio de display
      // antes de iniciar la animación de transición.
      setTimeout(() => {
        this.overlay.classList.add("active");
      }, 10);

      document.body.style.overflow = "hidden";
      
      // Focus en el botón de cerrar para accesibilidad
      setTimeout(() => {
        this.closeBtn.focus();
      }, 100); // Un delay mayor para el focus está bien
    }

    close() {
      // Inicia la animación de cierre al quitar la clase
      this.overlay.classList.remove("active");
      document.body.style.overflow = "";
      
      // Al finalizar la animación (400ms), lo ocultamos completamente
      // y devolvemos el focus al botón que lo abrió.
      setTimeout(() => {
        this.overlay.style.display = "none";
        this.openBtn.focus();
      }, 400); // Debe coincidir con la duración de la transición en CSS
    }
  }

  // Inicializar cuando el DOM esté listo
  document.addEventListener("DOMContentLoaded", () => {
    new TablaDescuentosModal();
  });
</script>