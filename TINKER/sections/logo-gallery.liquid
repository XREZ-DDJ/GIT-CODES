<div class="space" style="--section-padding: {{ section.settings.section_padding }}px; --gallery-height: {{ section.settings.gallery_height }}px;">
    <section class="gallery-of-icons">
        {%- for block in section.blocks -%}
            {%- if block.settings.image != blank -%}
                  <img 
                    src="{{ block.settings.image | image_url: width: 300 }}" 
                    srcset="
                        {{ block.settings.image | image_url: width: 150 }} 150w,
                        {{ block.settings.image | image_url: width: 300 }} 300w,
                        {{ block.settings.image | image_url: width: 600 }} 600w
                    "
                    sizes="(max-width: 768px) 150px, 300px"
                    alt="{{ block.settings.alt | escape }}"
                    width="300"
                    height="{{ block.settings.image.height | divided_by: block.settings.image.width | times: 300 | round }}"
                    style="object-fit: cover;"
                    loading="lazy"
                    {{ block.shopify_attributes }}
                >
            {%- endif -%}
        {%- endfor -%}
    </section>
</div>

<style>
    .space {
        padding: var(--section-padding, 20px);
    }
    
    .gallery-of-icons {
        display: flex;
        align-items: center;
        width: auto;
        height: var(--gallery-height, 130px);
    }
    
    .gallery-of-icons img {
        width: 0px;
        max-height: 100%;
        flex-grow: 1;
        object-fit: cover;
        opacity: .8;
        transition: .5s ease;
    }
    
    .gallery-of-icons img:hover {
        cursor: crosshair;
        width: 100px;
        opacity: 1;
        filter: contrast(120%);
    }
</style>



{% schema %}
{
  "name": "Logo gallery",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "gallery_height",
      "label": "Alto de galeria (px)",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 130
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Espacio de seccion (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text",
          "default": "Gallery image"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Logo gallery",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}